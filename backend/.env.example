# ============================================
# SMART CONTRACTS DEPLOYMENT (Foundry/Anvil)
# ============================================

# Anvil's default first account private key
# For production/testnet, use your own private key
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Anvil's default second account address for fee collection
# For production/testnet, use your own address
FEE_COLLECTOR=0x70997970C51812dc3A010C7d01b50e0d17dc79C8

# Staking limits
MAX_STAKE_PER_USER=10000000000000000000000 # 10,000 DAI
MAX_TOTAL_STAKE=1000000000000000000000000 # 1,000,000 DAI

# Protocol fee (in basis points, 100 = 1%)
PROTOCOL_FEE_BPS=100

# Initial reward pool funding
INITIAL_REWARD_POOL=50000000000000000000000 # 50,000 DAI

# Deploy mock DAI for local testing (set to false for mainnet/testnet)
DEPLOY_MOCK_DAI=true
DAI_ADDRESS=

# ============================================
# DEPLOYED CONTRACT ADDRESSES
# ============================================
# UPDATE THESE AFTER RUNNING: forge script script/Deploy.s.sol --rpc-url http://127.0.0.1:8545 --broadcast

STAKING_POOL_ADDRESS=
DAI_TOKEN_ADDRESS=

# ============================================
# BACKEND CONFIGURATION
# ============================================

# Flask
SECRET_KEY=dev-secret-key-change-me-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Blockchain
# For Anvil local: http://127.0.0.1:8545
# For Sepolia: https://sepolia.infura.io/v3/YOUR_INFURA_KEY
RPC_URL=http://127.0.0.1:8545
CHAIN_ID=31337

# Database
# For Docker: mongodb://mongodb:27017/chainstaker
# For local: mongodb://localhost:27017/chainstaker
MONGODB_URI=mongodb://localhost:27017/chainstaker
MONGODB_DB_NAME=chainstaker

# Redis & Celery
# For Docker: redis://redis:6379/0
# For local: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Event Listener
START_BLOCK=0
POLL_INTERVAL=5
BATCH_SIZE=1000

# Notifications (optional)
ENABLE_NOTIFICATIONS=false
NOTIFICATION_WEBHOOK_URL=

# Analytics
ANALYTICS_UPDATE_INTERVAL=300
CACHE_TTL=60
